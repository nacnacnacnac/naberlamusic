        };
        
        // Listen for commands with proper initialization gating
        if (!window.__vimeoBridgeInit) {
          window.__vimeoBridgeInit = true;
          window.vimeoBridge = window.vimeoBridge || {};
          
          window.vimeoBridge.messageHandler = function(event) {
