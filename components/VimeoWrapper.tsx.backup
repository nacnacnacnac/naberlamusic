                    const iframeVideo = iframeDoc.querySelector('video');
                    if (iframeVideo) {
                      if (action === 'play') {
                        iframeVideo.play();
                        this.sendResponse(id, 'ok', 'iframe_fallback_success');
                      } else if (action === 'pause') {
